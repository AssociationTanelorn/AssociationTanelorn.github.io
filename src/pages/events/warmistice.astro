---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import { Image } from 'astro:assets';
import Features from '~/components/widgets/Features.astro';
import Steps from '~/components/widgets/Steps.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Content from '~/components/widgets/Content.astro';
import { YouTube } from 'astro-embed';

const metadata = {
  title: 'Warmistice - Janvier 2026',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <Hero
    image={{ src: '~/assets/images/warmistice2026_logo_small.png', alt: 'Logo warmistice 2026', width: 800, height: 334 }}
  >
    <Fragment slot="title">
      Warmistice 2026
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        Les 24 et 25 janvier 2026, plus de 100 joueurs réunis pour un tournoi dantesque.
      </span>
    </Fragment>
  </Hero>

  <!-- Features Widget *************** -->

  <Features
    id="features"
    title="Le week end en résumé"
    items={[
      {
        title: 'Deux jours de dingue',
        description:
          'Le Warmistice commence le samedi 24 janvier à 8h45 pour accueillir les joueurs et se terminera le dimanche 24 après la remise des prix (17h).',
        icon: 'tabler:calendar-week',
      },
      {
        title: 'Où ça ?',
        description:
          'Rendez vous à <a class="font-semibold hover:underline custom-link" href="https://www.thionville.fr/ma-ville/equipements/equipements/detail/espace-multifonctionnel-de-veymerange-salle-de-reception" target="_blank">l\'espace multifonctionnel de Veymerange</a>.',
        icon: 'tabler:map-question',
      },
      {
        title: 'Il y aura du monde ?',
        description:
          'Le Warmistice c\'est un touroi Warhammer 40K de 100 joueurs et une convention Warhammer Old World de 20 joueurs.',
        icon: 'tabler:user-question',
      },
      {
        title: 'On peut s\'inscrire ?',
        description:
          'Le Warmistice 2026 est complet ! Tentez votre chance à la prochaine édition.',
        icon: 'tabler:question-mark',
      },
    ]}
  />

  <!-- Steps Widget ****************** -->

  <Steps
    title="Le Samedi"
    items={[
      {
        title: '8h45 - 9h15',
        description:
          'Accueil des joueurs',
        icon: 'tabler:clock',
      },
      {
        title: '9h15 - 9h30',
        description: 'Introduction du tournoi et placement des joueurs',
        icon: 'tabler:clock',
      },
      {
        title: '9h30 - 12h45',
        description: 'Ronde 1',
        icon: 'tabler:clock',
      },
      {
        title: '13h - 14h15',
        description: 'Repas',
        icon: 'tabler:clock',
      },
      {
        title: '14h17 - 17h30',
        description: 'Ronde 2',
        icon: 'tabler:clock',
      },
      {
        title: '18h - 21h15',
        description: 'Ronde 3',
        icon: 'tabler:clock',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1616198814651-e71f960c3180?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=987&q=80',
      alt: 'Steps image',
    }}
  />
  <Steps
    title="Le Dimanche"
    items={[
      {
        title: '8h00 - 8h30',
        description: 'Accueil des joueurs',
        icon: 'tabler:clock',
      },
      {
        title: '8h45 - 12h',
        description: 'Ronde 1',
        icon: 'tabler:clock',
      },
      {
        title: '12h15 - 13h30',
        description: 'Repas',
        icon: 'tabler:clock',
      },
      {
        title: '13h30 - 16h45',
        description: 'Ronde 2',
        icon: 'tabler:clock',
      },
      {
        title: '17h',
        description: 'Remise des prix',
        icon: 'tabler:clock',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1616198814651-e71f960c3180?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=987&q=80',
      alt: 'Steps image',
    }}
    isReversed=true
  />
  <Content
    id="video"
    title="Edition 2023 - Vidéo de présentation"
    classes={{ container: 'max-w-6xl' }}
    content='<iframe width="1020" height="630" src="https://www.youtube.com/embed/u9T6v0pSom4?si=kuMHwEuphkP8aF6y" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" referrerpolicy="strict-origin-when-cross-origin" allowfullscreen></iframe>'
    />
</Layout>
